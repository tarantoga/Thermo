	<!DOCTYPE html5>
	<html>
	<head>
		<link rel="stylesheet" type="text/css" href="/styles/iphone.css">	
	    <!-- Bring in the socket.io client -->
	    <script type="text/javascript" src="/js/socket.io.js"></script>
	    <!-- then beef it up with some convenience logic for talking to Sails.js -->
	    <script type="text/javascript" src="/js/sails.io.js"></script>
	    <!-- listen on socket.io for incoming messages -->
	    <script type="text/javascript" src="/js/app.js"></script>
		<script type="text/javascript" src="/js/jquery-1.10.2.min.js"></script>
		<script type="text/javascript" src="/js/jquery.sparkline.min.js"></script>
		
		<script type="text/javascript">
			socket.on('message', function(msg){
				//alert(JSON.stringify(msg));
				$('#temp').html(msg.data.value.toFixed(1) + '°C');
				$('#time').html(msg.data.createdAt);				
			});
			socket.on('graphdata', function(data){
				//alert(JSON.stringify(data.values));				
				var ctx = document.getElementById('canvas').getContext('2d');
				ctx.translate(0.5, 9.5);
				ctx.strokeStyle = '#99b';
				ctx.fillStyle="#ccf";
				ctx.lineWidth = 1;
				ctx.lineCap = 'round';
				ctx.lineJoin = 'round';
				ctx.clearRect(0, 0, 365, 70);

				ctx.beginPath();
				ctx.moveTo(0, 60);
				ctx.lineTo(data.xs[0], data.ys[0]);
				for (i = 1; i < data.xs.length; i++) {
					ctx.lineTo(data.xs[i], data.ys[i]);
				}
				ctx.lineTo(320, 60);
				ctx.fill();
				ctx.stroke();
				ctx.closePath();

				ctx.font="16px Arial";
				ctx.fillStyle = "#cbb";
				ctx.fillText(data.min, 322.5, 65);
				ctx.fillText(data.max, 322.5, 5);

				ctx.beginPath();
				ctx.moveTo(0, 0);
				ctx.lineTo(0,60);
				ctx.lineTo(320,60);
				ctx.lineTo(320,0);
				ctx.lineTo(0,0);
				ctx.strokeStyle = '#cbb';
				ctx.stroke();
				ctx.closePath();

			});
			socket.get('/sample/initialize', function(res) {});
		</script>
	</head>
	<body>
		<div class="block" style="height: 320px;">
		    <div class="centered">
		        <div id="temp"><%= temp %>°C</div>
		        <div id="time"><%= time %></div>
		        <canvas id="canvas" width="365" height="80" style="width: 180px; height: 40px"/>
		    </div>
		</div>
	</body>
	</html>
